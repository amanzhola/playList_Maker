<?xml version="1.0" encoding="utf-8"?>

<resources >

    <style name="MainView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backgroundDay</item>
    </style>

    <style name="SearchArrowBackIconStyle">
        <item name="android:layout_width">@dimen/arrow_back_icon_size</item>
        <item name="android:layout_height">@dimen/arrow_back_icon_size</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/arrow_back_icon_padding</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="ArrowBackIconStyle">
        <item name="android:layout_width">@dimen/arrow_back_icon_size</item>
        <item name="android:layout_height">@dimen/arrow_back_icon_size</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/arrow_back_icon_padding</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="MainTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="MainTitleTextView2">
        <item name="title">@string/app_name</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">@dimen/main_icon_size</item>
        <item name="android:layout_height">@dimen/main_icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/transparent</item>
        <item name="android:tintMode">multiply</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="MainMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/main_button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/main_button_margin_right</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/textColor</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="SettingsTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/custom_padding</item>
<!--        <item name="android:drawablePadding">@dimen/custom_drawable_padding</item>-->
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SwitchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_text_view_height</item>
        <item name="android:textSize">@dimen/custom_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/separator</item>
        <item name="android:paddingStart">@dimen/custom_padding</item>
        <item name="android:paddingEnd">@dimen/switch_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:thumbTint">@color/switch_thumb_off_color</item>
        <item name="android:trackTint">@color/switch_thumb_off_color</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_text_view_height</item>
        <item name="android:textSize">@dimen/custom_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/custom_padding</item>
        <item name="android:paddingEnd">@dimen/custom_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="MainSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/custom_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:text">@string/search</item>

    </style>


    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/searchBoxHeight</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/searchNoStroke</item>
        <item name="boxCornerRadiusTopStart">@dimen/searchRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/searchRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/searchRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/searchRadius</item>
        <item name="android:paddingHorizontal">@dimen/searchPaddingLeftRight</item>
        <item name="android:paddingVertical">@dimen/searchPaddingTopBottom</item>
        <item name="boxBackgroundColor">@color/hintFieldColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="SearchInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/searchLineHeight</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">@dimen/custom_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableStart">@drawable/magnifier</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/hintSearchIcon</item>
        <item name="android:paddingVertical">@dimen/searchIconAndHintVerticalPaddingSize</item>
        <item name="cursorColor">@color/cursorColor</item>
    </style>

    <style name="ClearIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:contentDescription">@string/clear_search</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="android:padding">@dimen/searchEraserPadding</item>
        <item name="android:visibility">gone</item>
        <item name="tint">@color/red</item>
    </style>

</resources>
