<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="clearsTag">@color/hintFieldColor</item>
    </style>

    <style name="BottomNavigationStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/textColor</item>
        <item name="itemTextColor">@color/textColor</item>
    </style>

    <style name="MainView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backgroundDay</item>
    </style>

    <style name="SettingsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchArrowBackIconStyle1">
        <item name="android:layout_width">@dimen/arrow_back_24</item>
        <item name="android:layout_height">@dimen/arrow_back_24</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/arrow_back_padding_12</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="SearchArrowBackIconStyle" parent="SearchArrowBackIconStyle1">
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="ArrowBackIconStyle1">
        <item name="android:layout_width">@dimen/arrow_back_24</item>
        <item name="android:layout_height">@dimen/arrow_back_24</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/arrow_back_padding_12</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="ArrowBackIconStyle" parent="ArrowBackIconStyle1"> ok
        <item name="android:layout_width">@dimen/arrow_back_24</item>
        <item name="android:tint">@color/textColor</item>
    </style>

    <style name="MainTitleTextView1">
        <item name="title">@string/playlist_maker</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginEnd">@dimen/Button_margin_16</item>
    </style>

    <style name="MainMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton"> ok
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">@dimen/Button_margin_16</item>
        <item name="cornerRadius">@dimen/Button_radius_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/textColor</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="SettingsTitleTextView1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingStart">@dimen/arrow_back_padding_12</item>
    </style>

    <style name="SettingsTitleTextView" parent="SearchTitleTextView1">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SwitchView1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Settings_Height_61</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/Separator_10</item>
        <item name="android:paddingStart">@dimen/Padding_16</item>
        <item name="android:paddingEnd">@dimen/Switch_padding_6</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SwitchView" parent="SwitchView1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsTextView1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Settings_Height_61</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/Padding_16</item>
        <item name="android:paddingEnd">@dimen/Padding_18</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsTextView" parent="SettingsTextView1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchTitleTextView1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/Padding_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:text">@string/search</item>
        <item name="android:paddingStart">@dimen/arrow_back_padding_12</item>
    </style>

    <style name="SearchTitleTextView" parent="SearchTitleTextView1">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SearchBox1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/searchBoxHeight_36</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintEnabled">true</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="boxStrokeWidth">@dimen/searchNoStroke</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxCornerRadiusTopStart">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/searchRadius_8</item>
        <item name="android:paddingHorizontal">@dimen/searchPaddingLeftRight_16</item>
        <item name="android:paddingVertical">@dimen/searchPaddingTopBottom_8</item>
        <item name="boxBackgroundColor">@color/hintFieldColor</item>
        <item name="cursorColor">@color/cursorColor</item>
    </style>

    <style name="SearchBox" parent="SearchBox1">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="boxBackgroundColor">@color/hintFieldColor</item>
    </style>


    <style name="SearchInput1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/searchLineHeight_52</item>
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableStart">@drawable/magnifier</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/hintSearchIcon</item>
        <item name="android:paddingVertical">@dimen/searchIconAndHintVerticalPadding_8.5</item>
    </style>

    <style name="SearchInput" parent="SearchInput1">
        <item name="android:drawableTint">@color/hintSearchIcon</item>
    </style>

    <style name="ClearIcon1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:contentDescription">@string/clear_search</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:padding">@dimen/searchEraserPadding_16</item>
        <item name="android:visibility">gone</item>
        <item name="tint">@color/hintSearchIcon</item>
    </style>

    <style name="ClearIcon" parent="ClearIcon1"> ok
        <item name="tint">@color/hintSearchIcon</item>
    </style>

    <style name="track_author1">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="track_author" parent="track_author1">
        <item name="android:textColor">@color/hintColor</item>
        <item name="drawableTint">@color/hintColor</item>
    </style>

    <style name="track_name1">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="track_name" parent="track_name1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="arrow_fw">
        <item name="android:tint">@color/hintSearchIcon</item>
    </style>

</resources>

