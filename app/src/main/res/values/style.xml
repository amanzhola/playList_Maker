<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="CustomTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="CustomImageView">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:contentDescription">Icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/transparent</item>
        <item name="android:tintMode">multiply</item>
    </style>

    <style name="CustomMaterialButtonStyle1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cornerRadius">16dp</item>

    </style>


</resources>
