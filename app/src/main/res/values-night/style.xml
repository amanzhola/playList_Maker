<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MainView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/textColor</item>
    </style>

    <style name="MainView1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/textColor</item>
    </style>

    <style name="SearchArrowBackIconStyle">
        <item name="android:layout_width">@dimen/arrow_back_24</item>
        <item name="android:layout_height">@dimen/arrow_back_24</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_marginEnd">@dimen/arrow_back_padding_12</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ArrowBackIconStyle">
        <item name="android:layout_width">@dimen/searchNoStroke</item>
        <item name="android:layout_height">@dimen/arrow_back_24</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/searchNoStroke</item>
        <item name="android:tint">@color/transparent</item>
    </style>

    <style name="SettingsTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/Padding_night_0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Settings_Height_61</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/Padding_16</item>
        <item name="android:paddingEnd">@dimen/Padding_18</item>
        <item name="android:drawablePadding">@dimen/Drawable_padding_8</item>
    </style>

    <style name="SwitchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Settings_Height_61</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/Separator_10</item>
        <item name="android:paddingStart">@dimen/Padding_16</item>
        <item name="android:paddingEnd">@dimen/Switch_padding_6</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/switch_thumb_on_color</item>
        <item name="trackTint">@color/switch_track_on_color</item>
    </style>

    <style name="MainSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/Title_text_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:text">@string/search</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/searchBoxHeight_36</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/searchNoStroke</item>
        <item name="boxCornerRadiusTopStart">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/searchRadius_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/searchRadius_8</item>
        <item name="android:paddingHorizontal">@dimen/searchPaddingLeftRight_16</item>
        <item name="android:paddingVertical">@dimen/searchPaddingTopBottom_8</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/textColor</item>
    </style>

    <style name="SearchInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/searchLineHeight_52</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLength">20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">@dimen/Settings_Text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableStart">@drawable/magnifier</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/textColor</item>
        <item name="android:paddingVertical">@dimen/searchIconAndHintVerticalPadding_8.5</item>
        <item name="cursorColor">@color/cursorColor</item>
    </style>



</resources>