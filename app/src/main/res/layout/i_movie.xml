<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/eeeee_black">

    <ImageView android:id="@+id/cover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/movie_picture"
        tools:src="@drawable/barsik"/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/black_white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Barsik lost the ring: The Ring of the Power"/>

        <TextView android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black_white"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="2202 - TV Series of Yandex Practikum, Mosсow"/>
<!--        android:textColor="@android:color/black"-->

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/favorite"
            android:src="@drawable/baseline_favorite1_border_24"
            android:backgroundTint="@color/eeeee_black"
            android:background="@drawable/round_button" />

    </LinearLayout>
</LinearLayout>