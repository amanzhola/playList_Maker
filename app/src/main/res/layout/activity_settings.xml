<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/CustomTextView"
            android:text="@string/list0"
            android:layout_centerVertical="true"
            app:drawableStartCompat="@drawable/arrow_back"
            app:drawableTint="@android:color/black" />

        <ImageView
            android:id="@+id/filter_list"
            style="@style/CustomImageView"
            android:src="@drawable/filter"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/dropdown"
            style="@style/CustomImageView"
            android:src="@drawable/expand_more"
            android:layout_toStartOf="@id/filter_list"
            android:layout_marginEnd="100dp"
            app:tint="@android:color/transparent"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/switch_control"
        style="@style/CustomTextView"
        android:text="@string/list1"
        app:drawableEndCompat="@drawable/control_selector"/>

    <TextView
        android:id="@+id/share"
        style="@style/CustomTextView"
        android:text="@string/list2"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:id="@+id/group"
        style="@style/CustomTextView"
        android:text="@string/list3"
        app:drawableEndCompat="@drawable/group"/>

    <TextView
        android:id="@+id/agreement"
        style="@style/CustomTextView"
        android:text="@string/list4"
        app:drawableRightCompat="@drawable/vector" />

</LinearLayout>