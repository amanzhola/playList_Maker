<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundDay">

    <LinearLayout
        android:id="@+id/PanelHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Layout"
            style="@style/CustomHeaderStyle"
            android:layout_weight="85"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,NestedWeights">

            <FrameLayout
                style="@style/CustomHeaderStyle"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/x_Panel_Header_Middle_1Title"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        style="@style/CustomHeaderNoteStyle"
                        android:gravity="start"
                        android:text="@string/playlist_maker"
                        android:textAllCaps="false"
                        app:icon="@drawable/expand_more"
                        app:iconTint="@android:color/transparent"
                        app:iconGravity="textEnd"
                        android:paddingStart="16dp"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/Button_Search_Light_ModeLeft"
                    android:contentDescription="Hidden"
                    android:layout_width="48dp"
                    style="@style/CustomHeaderNoteStyle"
                    app:icon="@drawable/arrow_back"
                    app:iconTint="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

        </LinearLayout>

        <Button
            style="@style/CustomHeaderNoteStyle"
            android:id="@+id/Button_Search_Light_ModeRight"
            android:contentDescription="Hidden"
            app:icon="@drawable/filter"
            app:iconTint="@android:color/transparent"
            android:layout_weight="15"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/big_3_buttons_and_header_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="3dp">

            <Button
                android:id="@+id/Button_Big1"
                style="@style/CustomButtonStyle"
                app:cornerRadius="16dp"
                app:icon="@drawable/magnifier"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                android:text="@string/search"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/Button_Big2"
                style="@style/CustomButtonStyle"
                app:cornerRadius="16dp"
                app:icon="@drawable/mediaicon"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                android:text="@string/media_library"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/Button_Big3"
                style="@style/CustomButtonStyle"
                app:cornerRadius="16dp"
                app:icon="@drawable/settingsicon"
                app:iconTint="@color/black"
                app:iconGravity="textStart"
                android:text="@string/settings"
                android:textAllCaps="false"/>


    </LinearLayout>

</LinearLayout>