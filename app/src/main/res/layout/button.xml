<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Button"
    android:layout_height="@dimen/searchNoStroke"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center_vertical"
    android:backgroundTint="@color/white1"
    android:textColor="@color/textColor_textColor"
    android:textAllCaps="false"
    android:text="@string/search"
    android:layout_marginHorizontal="@dimen/Button_margin_16"
    android:layout_marginBottom="@dimen/searchPaddingTopBottom_8"
    app:cornerRadius="@dimen/Button_radius_16"
    app:iconGravity="textStart"
    app:iconTint="@color/textColor_textColor"
    android:elevation="@dimen/searchNoStroke"
    android:translationZ="@dimen/searchNoStroke"
    app:icon="@drawable/search_icon"
    style="@style/Title"
    android:maxWidth="315dp"
    tools:text="@string/search"/>